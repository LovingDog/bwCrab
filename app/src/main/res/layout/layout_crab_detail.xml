<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/product_preview"
        android:layout_width="@dimen/product_preview_width"
        android:layout_height="@dimen/product_preview_height"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/aaa" />

    <TextView
        android:id="@+id/product_description"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/product_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="5dp"
            android:textColor="#F45C5C"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/integral"
            android:textColor="#F45C5C" />
    </LinearLayout>



    <TextView
        android:id="@+id/product_price"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        android:textColor="#FFB90F" />


</LinearLayout>