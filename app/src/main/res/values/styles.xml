<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--去掉状态栏与actionbar之间的线条-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.LoginActivity" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.MainActivity.UserManager" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/pageBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.MainActivity.Release" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pageBackground</item>
        <item name="colorPrimaryDark">@color/pageBackground</item>
        <item name="colorAccent">@color/pageBackground</item>
        <item name="android:windowBackground">@color/pageBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
